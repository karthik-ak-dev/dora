# =============================================================================
# DORA BACKEND CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# cp env.example .env

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=Dora
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# DATABASE
# =============================================================================
# Use asyncpg driver for async SQLAlchemy
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/dora
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-in-production-use-a-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins (JSON array format)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# AWS (For Worker - SQS)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SQS_CONTENT_QUEUE_URL=
SQS_CLUSTERING_QUEUE_URL=

# =============================================================================
# OPENAI (For Worker - AI Processing)
# =============================================================================
OPENAI_API_KEY=

# =============================================================================
# QDRANT (For Worker - Vector Database)
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

