# Dockerfile for API
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements/api.txt requirements/
RUN pip install --no-cache-dir -r requirements/api.txt

# Copy source code
COPY src/ src/

# Expose port
EXPOSE 8000

# Run API
CMD ["uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
